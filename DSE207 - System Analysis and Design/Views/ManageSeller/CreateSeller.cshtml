@model DSE207___System_Analysis_and_Design.Models.Seller

@{
    ViewData["Title"] = "CreateSeller";
    Layout = "~/Views/Shared/SellerLayout.cshtml";
}


<link href="~/css/SellerCss/SellerCss.css" rel="stylesheet" />
<h2 style="margin-left:20px;">Create Seller</h2>

<div class="row Container">
    <form asp-action="CreateSeller" class="row g-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-4">

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control CheckingForm" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control CheckingForm" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control CheckingForm" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Adress1" class="control-label"></label>
                <input asp-for="Adress1" class="form-control CheckingForm" />
                <span asp-validation-for="Adress1" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Adress2" class="control-label"></label>
                <input asp-for="Adress2" class="form-control CheckingForm" />
                <span asp-validation-for="Adress2" class="text-danger"></span>
            </div>
        </div>


        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control CheckingForm" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
      
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control CheckingForm" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <select asp-for="Country" class="form-select CheckingForm" aria-label="Default select example ">
                    <option selected>Open this select menu</option>
                    <option value="Malaysia">Malaysia</option>
                    <option value="Japan">Japan</option>
                    <option value="American">American</option>
                </select>
            </div>
        </div>

        <div class="form-group" style="padding-bottom:1rem;">
            <input type="submit" id="CreateBtn" value="Create" class="btn btn-primary" disabled />
        </div>
    </form>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(function () {
        $(".CheckingForm").change(function () {
           
            var cheking = $(".CheckingForm").filter(function () {
                return this.value != "";
               
            })
           
            if (cheking.length == 8) {
                $("#CreateBtn").prop("disabled", false)
            }
            else{
                $("#CreateBtn").prop("disabled", true)
            }
        })
    })
</script>

