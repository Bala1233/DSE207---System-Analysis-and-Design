@model DSE207___System_Analysis_and_Design.Models.Product

@{
    ViewData["Title"] = "CreateProducts";
    Layout = "~/Views/Shared/Seller_Layout.cshtml";
}

<link href="~/css/ManageProducts/CreateProducts.css" rel="stylesheet" />
<link rel="stylesheet" href="/richtexteditor/rte_theme_default.css" />

<div class="row Container">
    <h2>Create Products</h2>
    <form method="post" action="~/ManageProducts/CreateProducts">
        <div id="Left_Box" class="LEft_BOX">
            <div class="row Row_One">
                <div class="col-md-6">
                    Product Name <br />
                    <input name="ProductName" id="ProductName" class="form-control FormDesign" onkeyup="WritingName(this.value)" placeholder="Product Name" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    Title <br />
                    @*<label asp-for="Title" class="control-label"></label>*@
                    <select asp-for="Title" style="font-size: 16px;" id="Title" class="form-select form-control CheckingForm" aria-label="Default select example ">
                        <option selected>Open this select menu</option>
                        <option value="AzurLane">AzurLane</option>
                        <option value="Mahjong">Mahjong</option>
                    </select>
                    @*                    <input name="Title" id="title" class="form-control FormDesign" onkeyup="WritingTitle(this.value)" placeholder="Title" />
                    *@                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="row Row_Two">
                <div class="col-md-4">
                    OriPrice <br />
                    <input type="number" oninput="javascript: if (this.value < 0) this.value = 0;"
                           name="OriPrice" id="oriPrice" class="form-control FormDesign" onkeyup="WritingOriPrice(this.value)" placeholder="OriPrice" />
                    <span asp-validation-for="OriPrice" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    DisPrice <br />
                    <input type="number" oninput="javascript: if (this.value < 0) this.value = 0;"
                           name="DisPrice" id="disPrice" class="form-control FormDesign" onkeyup="WritingDisPrice(this.value)" placeholder="DisPrice" />
                    <span asp-validation-for="DisPrice" id="DisPriceError" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    Qty <br />
                    <input type="number" oninput="javascript: if (this.value < 0 ) this.value = 1;"
                           name="Qty" id="qty" class="form-control FormDesign" onkeyup="WritingQty(this.value)" placeholder="Qty" />
                    <span asp-validation-for="Qty" class="text-danger"></span>
                </div>
            </div>


            <div class="col-12">
                <label class="col-form-label">
                    Description       
                </label>
                <div id="div_editor1">
                    <p class="descriptionValue">Description Here...</p>
                </div>
                <input type="hidden" id="InputDes" name="Description" />
            </div>

        </div>
        <div id="Right_Box" style="display:none" class="RIGHT_BOX row Container">
            <div class="col-2">
                <label for="uploadImage" style="display:flex;width:120px;height:120px;border:1px black dashed;text-align: center; align-items: center;">
                    <i class="fa fa-plus" style="font-size:30px;margin:auto;position:relative;"></i>
                </label>
                <input style="display:none" id="uploadImage" class="file-upload" name="image" multiple type="file" accept=".jpg,.png" /><br />

            </div>

            <div class="col-6">
                <div style="height:450px;" class="row"> <img class="OnShowPic" onerror="ErrorImg(this)" id="ShowImgUrl" src="htt82/360_F_434728286_OWQQvAFoXZLdGHlObozsolNeuSxhpr84.jpg" />   </div>
                <div style="display:flex;justify-content:space-around;" id="smallpivContainer" class="row">
                </div>
            </div>
            <div class="col-4">
                <div class="container">
                    <article>
                        <h2 id="ShowName"> </h2>
                        <p class="free" id="ShowTitle"></p>
                        <p class="money LEft_BOX"><del><strong id="ShowOriPrice"></strong></del></p>
                        <p class="money RIGHT_BOX"><strong id="ShowDisPrice"></strong></p>
                        <span id="ShowQty"></span>

                        <p id="ShowDescription"></p>

                        <ul>
                            <li><i class="fa-brands fa-twitter">Twitter</i></li>
                            <li>EC Site Privacy Policy</li>
                            <li>Q&A </li>
                        </ul>

                    </article>
                </div>
            </div>
            <div class="form-group FormDesign">
                <button type="submit" disabled id="BtnDis" class="cart">Create Products</button>
                <div style="display:none;" class="ErrorMsg">Somethings is empty.</div>
            </div>
        </div>
    </form>
</div>


<div style="justify-content:start;" class="pt-3 pb-3 d-flex Container">
    <button type="button" onclick="BackToList()" class="btn btn-outline-secondary">Back To List</button>
    <button type="button" id="PreviewBtn" class="btn btn-outline-secondary">To Preview</button>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/ManageProducts/CreateProducts.js?5"></script>


